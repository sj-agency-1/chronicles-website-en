---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import PageLayout from '~/layouts/PageLayout.astro';
import { blogListRobots, getStaticPathsBlogList } from '~/utils/project';
import Projects from '~/components/blocks/Projects.astro';

export const prerender = true;
export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogList({ paginate });
}) satisfies GetStaticPaths;
type Props = InferGetStaticPropsType<typeof getStaticPaths>;
const { page } = Astro.props as Props;
const currentPage = page.currentPage ?? 1;

const metadata = {
  title: 'Projects',
  ignoreTitleTemplate: true,
  robots: {
    index: blogListRobots?.index && currentPage === 1,
    follow: blogListRobots?.follow,
  },
  openGraph: {
    type: 'blog',
  },
};
const breadCrumbLinks = [
  { text: 'Home', href: '/' },
  { text: 'Projects', href: '/project' },
];
---

<PageLayout
  {breadCrumbLinks}
  {metadata}
  heroItems={[
    {
      title: 'Projects',
      bgImage: '~/assets/images/pages/informative.webp',
    },
  ]}
>
  <Projects
    title="Projects"
    layout={{
      columns: 3,
      rows: 2,
    }}
    data={page.data.map((project) => {
      return {
        id: project.id,
        imageSrc: project.image,
        href: project.permalink,
        title: project.title,
        excerpt: project.excerpt ?? '',
      };
    })}
  />
</PageLayout>
