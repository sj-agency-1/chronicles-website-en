---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import PageLayout from '~/layouts/PageLayout.astro';
import { blogListRobots, getStaticPathsBlogList } from '~/utils/blog';
import Posts from '~/components/blocks/Posts.astro';

export const prerender = true;
export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogList({ paginate });
}) satisfies GetStaticPaths;
type Props = InferGetStaticPropsType<typeof getStaticPaths>;
const { page } = Astro.props as Props;
const currentPage = page.currentPage ?? 1;

const metadata = {
  title: 'Blog',
  ignoreTitleTemplate: true,
  robots: {
    index: blogListRobots?.index && currentPage === 1,
    follow: blogListRobots?.follow,
  },
  openGraph: {
    type: 'blog',
  },
};
const breadCrumbLinks = [
  { text: 'Home', href: '/' },
  { text: 'Blog', href: '/blog' },
];

// Load posts
import { findLatestPosts } from '~/utils/blog';
const posts = await findLatestPosts({ count: 10 });
---

<PageLayout
  {breadCrumbLinks}
  {metadata}
  heroItems={[
    {
      title: 'Blog',
      bgImage: '~/assets/images/pages/informative.webp',
    },
  ]}
>
  <Posts
    title="Blog"
    data={posts.map((post, index) => {
      return {
        id: post.id,
        imageSrc: post.image,
        href: post.permalink,
        label: 'Announcement',
        title: post.excerpt ?? post.title,
        direction: index % 2 ? 'left' : ('right' as 'left' | 'right'),
      };
    })}
  />
</PageLayout>
