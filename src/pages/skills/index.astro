---
import Container from '~/components/common/Container.astro';
import CleanLayout from '~/layouts/CleanLayout.astro';
import SkillsList from '~/components/structures/SkillsList.astro';

const metadata = {
  title: 'Skills',
  ignoreTitleTemplate: true,
};
const breadCrumbLinks = [
  { text: 'Home', href: '/' },
  { text: 'Skills', href: '/skills' },
];
---

<CleanLayout
  {breadCrumbLinks}
  {metadata}
  heroItems={[
    {
      title: 'Skills',
      bgImage: '~/assets/images/pages/skills.webp',
    },
  ]}
>
  <Container>
    <SkillsList showButton={false} size="large" class="grid grid-cols-1 md:grid-cols-3 gap-8" />
  </Container>
</CleanLayout>
