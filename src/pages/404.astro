---
import Content from '~/components/common/Content.astro';
import PageLayout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '404 - Page Not Found',
  description:
    "Sorry, but the page you are looking for does not exist. Please return to the home page.",
  ignoreTitleTemplate: true,
};
---

<PageLayout {metadata}>
  <Content>
    <h1>404 - Page Not Found</h1>
    <p>Sorry, but the page you are looking for does not exist.</p>
    <p>You can return to the <a href="/" class="underline font-bold">home page</a>.</p>
  </Content>
</PageLayout>
