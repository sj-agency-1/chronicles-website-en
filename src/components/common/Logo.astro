---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';

interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const logoVariantsClasses = {
  light: 'stroke-primary',
  dark: 'stroke-white',
};

const textVariantsClasses = {
  light: 'text-primary',
  dark: 'text-white',
};
---

<a href="/">
  <div class={`logo-container logo-container-${variant} flex items-center gap-1 sm:gap-4`}>
    <div class="logo-icon">
      <Icon name="logo" class={twMerge('w-10 h-10', logoVariantsClasses[variant])} />
    </div>
    <div class="logo-text">
      <p class={twMerge('logo-title font-heading', textVariantsClasses[variant])}>CHRONICLES</p>
      <p class={twMerge('logo-subtitle font-heading', textVariantsClasses[variant])}>BUSINESS PATHFINDER</p>
    </div>
  </div>
</a>

<style>
  .logo-title {
    font-size: 24px;
    font-weight: 900;
  }
  .logo-subtitle {
    font-size: 11px;
    font-weight: 900;
  }

  /* Mobile: nudge icon and text slightly down and gently scale the icon for better visual balance */
  .logo-icon,
  .logo-text,
  .logo-title,
  .logo-subtitle {
    transition: transform 180ms ease;
  }

  @media (max-width: 340px) {
    .logo-text {
      transform: scale(0.8);
    }
    .logo-icon {
      transform: scale(0.8);
    }
  }
</style>
