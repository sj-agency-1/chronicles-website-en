const footerRightLinks: Array<Link> = [
  {
    href: getSkillLink(SkillType.CrisisManagement),
    text: getSkillTitle(SkillType.CrisisManagement),
  },
  {
    href: getSkillLink(SkillType.BusinessAnalysis),
    text: getSkillTitle(SkillType.BusinessAnalysis),
  },
  {
    href: getSkillLink(SkillType.MarketingAndAdv),
    text: 'Маркетинг',
  },
  {
    href: getSkillLink(SkillType.InternetMarketing),
    text: 'Digita-Маркетинг',
  },
  {
    href: getSkillLink(SkillType.BusinessDevelopment),
    text: getSkillTitle(SkillType.BusinessDevelopment),
  },
  {
