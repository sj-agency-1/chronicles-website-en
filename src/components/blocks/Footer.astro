  text: 'Политике использования контента',
};
const sitemap: Link = {
  href: '/sitemap',
  text: 'Карта сайта',
};

const footerCenterLinks: Array<Link> = [
  {
    href: '/',
    text: 'Главная',
  },
  {
    href: '/about',
