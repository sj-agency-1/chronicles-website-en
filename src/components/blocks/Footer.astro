---
import Logo from '../common/Logo.astro';
import FooterSocials from '../structures/FooterSocials.astro';
import { SkillType, getSkillTitle, getSkillLink } from '~/utils/skills';

interface Link {
  href: string;
  text: string;
}

const contentPolicy: Link = {
  href: '/content-policy',
  text: 'Content Usage Policy',
};
const sitemap: Link = {
  href: '/sitemap-index.xml',
  text: 'Sitemap',
};

const footerCenterLinks: Array<Link> = [
  {
    href: '/',
    text: 'Home',
  },
  {
    href: '/about-me',
    text: 'About Me',
  },
  {
    href: '/skills',
    text: 'My Skills',
  },
  {
    href: '/services',
    text: 'My Services',
  },
  {
    href: '/gallery',
    text: 'Gallery',
  },
  {
    href: '/contacts',
    text: 'Contacts',
  },
  {
    href: '/blog',
    text: 'Blog',
  },
  {
    href: '/donate',
    text: 'Donate',
  },
  {
    href: '/vacancies',
    text: 'Vacancies',
  },
  {
    href: '/user-agreement',
    text: 'User Agreement',
  },
  {
    href: '/privacy-policy',
    text: 'Privacy Policy',
  },
  {
    href: '/content-policy',
    text: 'Content Usage Policy',
  },
  {
    href: '/offer-agreement',
    text: 'Public Offer Agreement',
  },
];

const footerRightLinks: Array<Link> = [
  {
    href: getSkillLink(SkillType.CrisisManagement),
    text: getSkillTitle(SkillType.CrisisManagement),
  },
  {
    href: getSkillLink(SkillType.BusinessAnalysis),
    text: getSkillTitle(SkillType.BusinessAnalysis),
  },
  {
    href: getSkillLink(SkillType.MarketingAndAdv),
    text: 'Marketing',
  },
  {
    href: getSkillLink(SkillType.InternetMarketing),
    text: 'Digital Marketing',
  },
  {
    href: getSkillLink(SkillType.BusinessDevelopment),
    text: getSkillTitle(SkillType.BusinessDevelopment),
  },
  {
    href: getSkillLink(SkillType.SalesManagement),
    text: getSkillTitle(SkillType.SalesManagement),
  },
  {
    href: getSkillLink(SkillType.FindInvestments),
    text: getSkillTitle(SkillType.FindInvestments),
  },
  {
    href: getSkillLink(SkillType.BusinessCommunicationAndMediation),
