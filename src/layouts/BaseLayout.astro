---
import '~/assets/styles/tailwind.css';
import { I18N } from 'astrowind:config';
import type { MetaData as MetaDataType } from '~/types';

import CommonMeta from './common/CommonMeta.astro';
import Favicons from './common/Favicons.astro';
import CustomStyles from './common/CustomStyles.astro';
import Metadata from './common/Metadata.astro';
import SiteVerification from './common/SiteVerification.astro';
import Analytics from './common/Analytics.astro';
import JsonLd from './common/JsonLd.astro';
import Scripts from './common/Scripts.astro';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection}>
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />
    <JsonLd />
  </head>
  <body class="text-default bg-page">
    <slot />
    <Scripts />
  </body>
</html>
